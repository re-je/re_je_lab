<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="re_je_pointer">
    <xacro:macro name="re_je_pointer" params="prefix">
        <link name="${prefix}pointer">
            <visual>
                <geometry>
                    <mesh filename="package://lab_description/meshes/visual/re_je_pointer.stl" />
                </geometry>
                <material name="greyish">
                    <color rgba="0.8 0.8 0.8 1"/>
                </material>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="package://lab_description/meshes/collision/re_je_pointer.stl" />
                </geometry>
            </collision>
        </link>
    </xacro:macro>
</robot>
